{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
		"lib": [
			"es6",
			"es7",
			"es2016",
			"es2017",
			"dom"
		],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": false,
        "outDir": "./dist/out",
        "paths": {
			"*": [ "*" ],
			"assets/*": [ "annotator-assets/*" ],
			"@/*": [ "*" ]
		},
        "preserveConstEnums": true,
        "sourceMap": true,
		"target": "es6"
    },
    "include": [
        "src"
    ],
	"awesomeTypescriptLoaderOptions": {
		"useBabel": false,
		"forkChecker": true,
		"useCache": true,
		"cacheDirectory": "dist/.awcache",
		"babelOptions": {
			"sourceMaps": "both",
			"env": {
				"development": {
					"plugins": [
						"react-hot-loader/babel"
					]
				}
			}
		}
	}

}
