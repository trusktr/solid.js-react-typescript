doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href='https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css')
        style!=fontStyles
        //style!=mainStyles
        style!=eval(require('!!css-loader!sass-loader!styles/split-pane.global.scss'))
        style!=eval(require('!!css-loader!animate.css/animate.css'))
        style!=eval(require('!!css-loader!font-awesome/css/font-awesome.min.css'))
        style.
            html, body {
                height: 100%;
                margin: 0;
                border: 0;
                padding: 0;
                width: 100%;
                background-color: rgba(193, 195, 193, 0.55);
                font-family: Verdana, Geneva, sans-serif;
            }
        style.
            #root {
                height: 100%;
                margin: 0.5%;
                border: 0;
                padding: 0;
                width: 79%;
                float: left;
            }
        style.
            #menu {
                height: 100%;
                margin: 0.5%;
                border: 0;
                padding: 0;
                width: 19%;
                float: left;
                background-color: transparent;
            }
        style.
            .fieldset_style {
                margin: 1%;
                padding: 1%;
                /*height: 32%;*/
                width: 95%;
            }
        style.
            .fieldset_content_style {
                margin-top: 2px;
                width: 100%;
                height: 100%;
                text-align: center;
            }
        style.
            .div_buttons_group {
                margin-top: 2px;
                text-align: center;
            }
        style.
            .div_properties {
                margin-top: 2px;
                text-align: center;
            }
        style.
            .div_glue {
                margin-top: 2px;
                text-align: left;
                font-size: small;
            }
        style.
            .div_help {
                margin-top: 2px;
                text-align: left;
                font-size: x-small;
            }
        style.
            .button_style {
                margin: 3%;
            }
        style.
            .button_group {
                widh: 100%;
            }
        style.
            .label_style {
                width: 49%;
                text-align: left;
                border: 0;
                padding: 0;
                margin: 0;
                background-color: transparent;
                float: left;
                font-size: small;
            }
        style.
            .select_style {
                width: 50%;
                text-align: left;
                padding: 0;
                margin: 0;
                float: left;
                font-size: small;
            }

        meta(name="viewport",content="width=device-width, initial-scale=1")
        title!="Annotator"

    body
        #root
            script.
                require(process.cwd() + "/dist/app/annotator-entry-ui")
        #menu
            #tools(class = 'div_buttons_group')
                button#tools_add.ui-btn.ui-icon-plus.ui-btn-icon-left.button_style()() New Lane
                button#tools_delete.ui-btn.ui-icon-delete.ui-btn-icon-left.button_style()() Delete Lane
                button#tools_load.ui-btn.ui-icon-cloud.ui-btn-icon-left.button_style()() Load Cloud
                button#tools_save.ui-btn.ui-icon-lock.ui-btn-icon-left.button_style()() Save Annotation

            fieldset(class='fieldset_style')
                //legend Lane Properties
                #lane_prop.fieldset_content_style
                    #lane_prop_1.div_properties
                    #lane_prop_2.div_glue Add Neighbor:
                    #lane_prop_3.div_buttons_group
                        button#lp_add_forward.button_group() &uarr;
                    #lane_prop_4.div_buttons_group
                        button#lp_add_left_opsoite.button_group() &darr;
                        button#lp_add_left_same.button_group() &uarr;
                        button#lp_current.button_group(disabled) C
                        button#lp_add_right_same.button_group() &uarr;
                        button#lp_add_right_oposite.button_group() &darr;

            fieldset(class='fieldset_style')
                //legend Lane Connections
                #lane_conn.fieldset_content_style

            fieldset(class='fieldset_style')
                #lane_help.div_help
                    p.
                        Help:<br>
                        A - Keep pressed to add more markers<br>
                        D - Press to delete last marker


