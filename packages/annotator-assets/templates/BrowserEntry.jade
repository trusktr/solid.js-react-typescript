-
    var fontStyles = eval(require('!!css-loader!sass-loader!assets/fonts/fonts.global.scss'))
//var mainStyles = eval(require('!!css-loader!sass-loader!styles/MainEntry.global.scss'))

doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href='https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css')
        style!=fontStyles
        //style!=mainStyles
        style!=eval(require('!!css-loader!sass-loader!styles/split-pane.global.scss'))
        style!=eval(require('!!css-loader!animate.css/animate.css'))
        style!=eval(require('!!css-loader!font-awesome/css/font-awesome.min.css'))
        style.
            html, body {
                height: 100%;
                margin: 0;
                border: 0;
                padding: 0;
                width: 100%;
                background-color: rgba(193, 195, 193, 0.55);
                font-family: Verdana, Geneva, sans-serif;
            }
        style.
            #root {
                height: 100%;
                margin: 0.5%;
                border: 0;
                padding: 0;
                width: 79%;
                float: left;
            }
        style.
            #menu {
                height: 100%;
                margin: 0.5%;
                border: 0;
                padding: 0;
                width: 19%;
                float: left;
                background-color: transparent;
            }
        style.
            .fieldset_style {
                margin: 1%;
                padding: 1%;
                /*height: 32%;*/
                width: 95%;
            }
        style.
            .fieldset_content_style {
                margin-top: 2px;
                width: 100%;
                height: 100%;
                text-align: center;
            }
        style.
            .div_buttons_group {
                margin-top: 2px;
                text-align: center;
            }
        style.
            .div_properties {
                margin-top: 2px;
                text-align: center;
            }
        style.
            .div_glue {
                margin-top: 2px;
                text-align: left;
                font-size: small;
            }
        style.
            .div_help {
                margin-top: 0;
                -webkit-margin-after: 0;
                text-align: left;
                font-size: x-small;
            }
        style.
            .button_style {
            }
        style.
            .button_inline {
                width: 90px;
                text-align: center;
                margin: 0;
                font-size: small;
                cursor: pointer;
            }
        style.
            .button_inline:hover {
                background-color: #1883ba;
            }
        style.
            .label_style {
                width: 60%;
                text-align: left;
                border: 0;
                padding: 0;
                margin: 0;
                background-color: transparent;
                float: left;
                font-size: small;
            }
        style.
            .select_style {
                width: 40%;
                text-align: left;
                padding: 0;
                margin: 0;
                float: left;
                font-size: small;
            }
        style.
            .accordion {
                background-color: #eee;
                color: #444;
                cursor: pointer;
                padding: 0;
                width: 100%;
                text-align: left;
                border: none;
                outline: none;
                font-size: 15px;
                transition: 0.4s;
            }
        style.
            .accordion.active, .accordion:hover {
                background-color: #1883ba;
            }
        style.
            .dropdown_head {
                margin : 1px;
                padding-left: 2px;
            }
        style.
            .dropdown_body {
                height: auto;
                padding: 5px;
                background-color: white;
                display: none;
            }

        meta(name="viewport",content="width=device-width, initial-scale=1")
        title!="Annotator"

    body
        #root
            script.
                require(process.cwd() + "/dist/app/annotator-entry-ui")
        #menu
            #tools.div_buttons_group
                button#tools_add.ui-btn.ui-icon-plus.ui-btn-icon-left.button_style() New Lane
                button#tools_delete.ui-btn.ui-icon-delete.ui-btn-icon-left.button_style() Delete Lane
                button#tools_load.ui-btn.ui-icon-cloud.ui-btn-icon-left.button_style() Load Cloud
                button#tools_save.ui-btn.ui-icon-lock.ui-btn-icon-left.button_style() Save Annotation

            #menu_1.accordion
                h3#exp_head_1.dropdown_head Annotation
                #exp_body_1.dropdown_body
                    #lane_prop.fieldset_content_style
                        #lane_prop_1.div_properties
                        #lane_prop_2.div_glue Add Neighbor:
                        #lane_prop_3.div_buttons_group
                            button#lp_add_forward &uarr;
                        #lane_prop_4.div_buttons_group
                            button#lp_add_left_opposite() &darr;
                            button#lp_add_left_same() &uarr;
                            button#lp_current(disabled) C
                            button#lp_add_right_same() &uarr;
                            button#lp_add_right_opposite() &darr;
            #menu_2.accordion
                h3#exp_head_2.dropdown_head Neighbours
                #exp_body_2.dropdown_body
                    #lane_conn.fieldset_content_style
                    #lane_conn_btn.fieldset_content_style
                        button#lc_add.button_inline Add
            #menu_3.accordion
                h3#exp_head_3.dropdown_head Trajectory
                #exp_body_3.dropdown_body
                    #trajectory_1.fieldset_content_style
                        text#tr_add_text.label_style Add to trajectory
                        button#tr_add.button_inline Add
                    #trajectory_2.fieldset_content_style
                        text#tr_show_text.label_style Show trajectory
                        button#tr_show.button_inline Show
                    #trajectory_3.fieldset_content_style
                        button#save_path.button_inline Save To File
            #menu_4.accordion
                h3#exp_head_4.dropdown_head Help
                #exp_body_4.dropdown_body
                    p.div_help.
                        Key Shortcuts:<br>
                        A - Keep pressed to add more markers<br>
                        D - Press to delete last marker<br>
                        N - Press to create new lane<br>
                        Z - Press to delete current active lane
