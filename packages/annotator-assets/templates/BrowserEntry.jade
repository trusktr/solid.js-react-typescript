-
doctype html
html(lang="en")
	head
		meta(charset='utf-8')
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet" href='https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css')
		style.
			body {
				overflow-x: hidden;
				overflow-y: hidden;
			}
		style.
			html, body {
				height: 100%;
				margin: 0;
				border: 0;
				padding: 0;
				width: 100%;
				background-color: white;
				font-family: Verdana, Geneva, sans-serif;
			}
		style.
			#threeJs_gui {
				position: absolute;
				top: 100%;
				left: 100%;
			}
		style.
			#root {
				height: 100%;
				border: 0;
				padding: 0;
				width: auto;
			}
		style.
			#logo {
				position: fixed;
				z-index: 2;
				bottom: 0;
				left: 0;
				background-color: transparent;
				padding-bottom: 0px;
				padding-left: 12px;
			}
		style.
			#status_window {
				position: fixed;
				z-index: 3;
				bottom: 0;
				right: 0;
				background-color: rgba(255, 255, 255, 0.5);
				padding: 5px;
			}
			.statusOk {
				color: #00aa00;
			}
			.statusWarning {
				color: #ffd260;
			}
			.statusError{
				color: #aa0000;
			}
		style.
			#menu {
				height: 100%;
				width: 250px;
				position: fixed;
				z-index: 1;
				top: 50px;
				right: 0;
				background-color: transparent;
				overflow-x: hidden;
				padding-top: 0;
				padding-right: 5px;
			}
		style.
			#menu_control {
				height: 50px;
				width: 150px;
				position: fixed;
				z-index: 1;
				top: 0;
				right: 0;
				background-color: transparent;
				padding-right: 5px;
				text-align: right;
				visibility: hidden;
			}
		style.
			.menu_btn {
				height: 40px;
				width: 40px;
				font-size: x-large;
				background-color: transparent;
				border: none;
			}
		style.
			button.menu_btn:hover {
				font-size: xx-large;
				background-color: transparent;
			}
		style.
			button.menu_btn:active {
				font-size: xx-large;
			}
		style.
			.fieldset_content_style {
				margin-top: 2px;
				width: 100%;
				height: 100%;
				text-align: center;
			}
		style.
			.div_buttons_group {
				margin-top: 2px;
				text-align: center;
			}
		style.
			.div_properties {
				margin-top: 2px;
				text-align: center;
			}
		style.
			.div_glue {
				margin-top: 2px;
				text-align: left;
				font-size: x-small;
			}
		style.
			.div_help {
				margin-top: 0;
				-webkit-margin-after: 0;
				text-align: left;
				font-size: x-small;
			}
		style.
			.button_inline {
				width: 90px;
				text-align: center;
				margin: 0;
				font-size: x-small;
				cursor: pointer;
				background-color: white;
				color: #4CAF50;
				border: 2px solid #4CAF50;
				border-radius: 12px;
			}
		style.
			button.button_inline:disabled {
				color: #999999;
				border: 2px solid #999999;
			}
		style.
			button.button_inline:hover {
				background-color: white;
			}
		style.
			button {
				width: 30px;
				text-decoration: none;
				outline: none;
				color: #fff;
				background-color: #4CAF50;
				border: none;
				border-radius: 15px;
			}
		style.
			.ui-btn {
				font-size: 12px;
			}
		style.
			button:hover {
				background-color: #3e8e41
			}
		style.
			button:active {
				background-color: #3e8e41;
				transform: translateY(4px);
			}
		style.
			.label_style {
				width: 60%;
				text-align: left;
				border: 0;
				padding: 0;
				margin: 0;
				background-color: transparent;
				float: left;
				font-size: x-small;
			}
		style.
			.select_style {
				width: 40%;
				text-align: left;
				padding: 0;
				margin: 0;
				float: left;
				font-size: x-small;
			}
		style.
			.accordion {
				outline: none;
				border-radius: 10px;
				margin-bottom: 2px;
				background-color: #f4511e;
				border: none;
				color: #FFFFFF;
				text-align: left;
				font-size: 15px;
				padding: 0;
				width: auto;
				cursor: pointer;
			}
		style.
			.dropdown_head {
				margin: 3px;
				padding: 2px;
				font-size: 12px;
			}
		style.
			.dropdown_head:after {
				content: '\02795'; /* Unicode character for "plus" sign (+) */
				font-size: 10px;
				padding-right: 5px;
				padding-top: 2px;
				float: right;
			}
		style.
			.dropdown_head:active:after {
				content: '-';
			}
		style.
			.dropdown_body {
				height: auto;
				padding: 5px;
				border-radius: 5px;
				-webkit-padding-after: 10px;
				background-color: antiquewhite;
				color: black;
				display: none;
			}

		meta(name="viewport",content="width=device-width, initial-scale=1")
		title!="Mapper Visualizer"

	body
		#root
			script.
				require(process.cwd() + "/dist/app/annotator-entry-ui")
		#logo
			img(src=process.cwd() + "/packages/annotator-assets/images/signature_with_arrow_white.png",
				height="30px",
				width="auto")
		#status_window
		#menu_control
			button#status_window_control_btn.menu_btn &#x2139;
			button#live_location_control_btn.menu_btn &#x2388;
			button#menu_control_btn.menu_btn &#9776;
		#menu
			#tools.div_buttons_group
				button#tools_add_lane.ui-btn.ui-icon-plus.ui-btn-icon-left New Lane
				button#tools_add_traffic_sign.ui-btn.ui-icon-plus.ui-btn-icon-left New Traffic Sign
				button#tools_delete.ui-btn.ui-icon-minus.ui-btn-icon-left Delete Annotation
				button#tools_load.ui-btn.ui-icon-grid.ui-btn-icon-left Load Tiles
				button#tools_load_annotation.ui-btn.ui-icon-edit.ui-btn-icon-left Load Annotation
				button#tools_save.ui-btn.ui-icon-check.ui-btn-icon-left Save Annotation
				button#tools_export_kml.ui-btn.ui-icon-location.ui-btn-icon-left Export KML

			#menu_1.accordion
				h3#exp_head_1.dropdown_head Lane Annotation
				#exp_body_1.dropdown_body
					#lane_prop.fieldset_content_style
						#lane_prop_1.div_properties
						#lane_prop_2.div_glue Add Neighbor:
						#lane_prop_3.div_buttons_group
							button#lp_add_forward &uarr;
						#lane_prop_4.div_buttons_group
							button#lp_add_left_opposite &darr;
							button#lp_add_left_same &uarr;
							button#lp_current(disabled) C
							button#lp_add_right_same &uarr;
							button#lp_add_right_opposite &darr;
			#menu_2.accordion
				h3#exp_head_2.dropdown_head Neighbours
				#exp_body_2.dropdown_body
					#lane_conn.fieldset_content_style
					#lane_conn_btn.fieldset_content_style
						button#lc_add.button_inline Add
			#menu_3.accordion
				h3#exp_head_3.dropdown_head Traffic Sign Annotation
				#exp_body_3.dropdown_body
					#traffic_sign_prop_1.fieldset_content_style
					#traffic_sign_prop_2.fieldset_content_style
						button#test.button_inline Show
			#menu_4.accordion
				h3#exp_head_4.dropdown_head Trajectory
				#exp_body_4.dropdown_body
					#trajectory_1.fieldset_content_style
						text#tr_add_text.label_style Add to trajectory
						button#tr_add.button_inline Add
					#trajectory_2.fieldset_content_style
						text#tr_show_text.label_style Show trajectory
						button#tr_show.button_inline Show
					#trajectory_3.fieldset_content_style
						button#save_path.button_inline Save To File
			#menu_5.accordion
				h3#exp_head_5.dropdown_head Help
				#exp_body_5.dropdown_body
					p.div_help.
						<strong>Point cloud</strong><br>
						c - Center the camera on the tiles<br>
						R - Reset tilt and compass<br>
						h - Hide super tiles/point cloud/annotations<br>
						Shift-click - load points in a super tile<br>
						U - Unload the point cloud<br>
						L - Load all super tiles in point cloud<br>

						<strong>Annotations</strong><br>
						s - Save annotations JSON file as UTM<br>
						S - Save annotations JSON file as Lat/Lon<br>
						m - Save road network waypoints to KML file<br>
						A - Delete all annotations<br>
						z - Delete active annotation<br>
						f - Add connected lane to front<br>
						l - Add connected lane to left; same direction<br>
						k - Add connected lane to left; reverse direction<br>
						r - Add connected lane to right; same direction<br>
						e - Add connected lane to right; reverse direction<br>

						<strong>Annotation Markers</strong><br>
						n - Create new lane<br>
						a - Hold to add lane markers<br>
						t - Create new traffic sign<br>
						q - Hold to add traffic sign markers<br>
						w - Hold to add the final traffic sign marker<br>
						d - Delete last marker<br>
						1-9 - Hold when highlighting a marker to move its neighbors too<br>

						<strong>Live Mode</strong><br>
						o - Listen/stop listening for live location data<br>
